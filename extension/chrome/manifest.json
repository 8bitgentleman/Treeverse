{
    "manifest_version": 2,
    "name": "Treeverse",
    "icons": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    "page_action": {
        "default_icon": {
            "16": "icons/16.png",
            "32": "icons/32.png",
            "48": "icons/48.png",
            "128": "icons/128.png"
        },
        "default_title": "Treeverse"
    },
    "description": "",
    "version": "2.4",
    "background": {
        "scripts": [
            "resources/script/background.js"
        ],
        "persistent": false
    },
    "permissions": [
        "activeTab",
        "declarativeContent",
        "contextMenus"
    ],
    "web_accessible_resources": [
        "resources/*"
    ]
}