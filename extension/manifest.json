{
  "manifest_version": 2,
  "name": "Treeverse",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "page_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Treeverse"
  },
  "description": "",
  "version": "0.4",
  "background": {
    "scripts": [
      "resources/script/background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "declarativeContent",
    "contextMenus"
  ],
  "web_accessible_resources": [
    "resources/*"
  ]
}